<%= link_to engine_control_panel_path(engine_id: app_engine.id),
    class: 'dashboard_container',
    # data: { behavior: 'lazy_load', url: engine_path(app_engine.id), remote: true, status: 'none' } do
    remote: true do %>
  <%= content_tag :div, class: 'dashboard_container_label' do %>
    <%= content_tag :div, id: "engine_#{app_engine.name}_status_indicator" do %>
      <%= status_indicator_for(app_engine.state) %>
    <% end %>
    <%= content_tag :div, class: 'dashboard_container_label_text' do %>
      <%= content_tag :div, app_engine.name %>
      <%= content_tag :div, (app_engine.label || '&nbsp;'.html_safe), class: 'dashboard_container_label_subtext' %>
    <% end %>
  <% end %>
<% end %>
