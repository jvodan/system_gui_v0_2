<%= link_to engine_control_panel_path(engine.id),
    class: 'col-sm-4 col-md-3 col-lg-2 dashboard_container',
    # data: { behavior: 'lazy_load', url: engine_path(engine.id), remote: true, status: 'none' } do
    remote: true do %>
  <%= content_tag :div, class: 'dashboard_container_label' do %>
    <%= content_tag :div, id: "engine_#{engine.id}_status_indicator", do %>
      <%= status_indicator_for(engine.container.state) %>
    <% end %>
    <%= content_tag :div do %>
      <%= engine.name %><br>
      <%= "engine.label" %>
    <% end %>
  <% end %>
<% end %>
