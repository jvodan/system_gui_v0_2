<%= content_tag :div, class: 'col-sm-4 col-md-3 col-lg-2' do %>
  <%= content_tag :div, class: 'btn app', title: app.title do %>
    <%= content_tag :div, class: 'portal_icon' do %>
      <% if app.icon.blank? || app.icon.dirty? %>
        <%= icon_text(nil, 'fa-square-o') %>
      <% else %>
        <%= image_tag app.icon.url(:small) %>
      <% end %>
    <% end %>
    <%= content_tag :div, class: 'portal_label' do %>
      <%= app.to_label %>
    <% end %>
  <% end %>
<% end %>
