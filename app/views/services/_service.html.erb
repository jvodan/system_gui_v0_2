<%= link_to service_control_panel_path(service.name),
    class: 'engines_container', remote: true do %>
  <%= content_tag :div, class: 'engines_container_label' do %>
    <%= content_tag :div, id: "service_#{service.name}_state_indicator" do %>
      <%= state_indicator_for(service.state) %>
    <% end %>
    <%= content_tag :div, class: 'engines_container_label_text' do %>
    <%= content_tag :div, service.name %>
    <% p service.name %>
      <%= content_tag :div, service.label, class: 'engines_container_label_subtext' %>
    <% end %>
  <% end %>
<% end %>
