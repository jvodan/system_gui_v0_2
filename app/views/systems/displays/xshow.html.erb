<%= content_tag :div, class: 'page_view' do %>
  <%= content_tag :div, class: 'row' do %>
    <%= content_tag :div, class: 'col-sm-12' do %>
      <%= content_tag :div, class: 'display_inline pull_right_wide_media' do %>
        <%= return_to_system_link %>
      <% end %>
      <%= page_header text: 'Display settings', icon: 'fa-tv' %>
    <% end %>
  <% end %>
  <%= content_tag :div, class: 'row' do %>
    <%= content_tag :div, class: 'col-sm-12' do %>

      <%= data_list_text 'system_label', @system.label %>
      <%= data_list_text 'admin_banner', @system.admin_banner %>
      <%= data_list_text 'text_color', @system.text_color %>
      <%= data_list_text 'background_color', @system.background_color %>
      <%= data_list_text 'portal_header', @system.portal_header %>
      <%= data_list_text 'portal_footer', @system.portal_footer %>



    <% end %>
  <% end %>
<% end %>
